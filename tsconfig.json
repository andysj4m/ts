{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "inlineSources": true,
        "noEmitOnError": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false
    },

    "exclude": [
        "node_modules"
    ]
}